{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "node --max_old_space_size=4096 examples/server.js ",
    "start": "cross-env NODE_OPTIONS=--max_old_space_size=4096 rollup -w -c build/rollup.config.js",
    "build": "node --max_old_space_size=4096 build/build-pkg.js",
    "format": "prettier --write \"packages/**/*.ts\" \"packages/**/*.tsx\" \"examples/**/*.ts\" \"examples/**/*.tsx\"",
    "lint": "eslint \"{packages,examples}/**/*.{ts,tsx}\" --fix",
    "lint-staged": "lint-staged",
    "test": "mocha --require ts-node/register --require tsconfig-paths/register packages/**/*.spec.ts --colors"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-decorators": "^7.10.4",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@types/chai": "^4.2.11",
    "@types/classnames": "^2.2.10",
    "@types/mocha": "^7.0.2",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@types/react-router": "^5.1.8",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "brotli": "^1.3.2",
    "chai": "^4.2.0",
    "classnames": "^2.2.6",
    "cross-env": "^7.0.2",
    "css-loader": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "express": "^4.17.1",
    "husky": "^4.2.5",
    "lerna": "^3.22.0",
    "lint-staged": "^10.2.11",
    "lodash": "^4.17.19",
    "mocha": "^8.0.1",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-app-polyfill": "^1.0.6",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router": "^5.2.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rollup": "^2.23.0",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "todomvc-app-css": "^2.3.0",
    "todomvc-common": "^1.0.5",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.5",
    "vue-loader": "^15.9.3",
    "vue-style-loader": "^4.1.2",
    "webpack": "^4.43.0",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0"
  },
  "dependencies": {
    "@types/react-router-dom": "^5.1.5",
    "babel-loader": "^8.1.0",
    "connected-react-router": "^6.8.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5"
  },
