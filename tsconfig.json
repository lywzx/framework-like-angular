{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es6", "dom"],
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@framework-like-angular/core": [
        "packages/core/src"
      ],
      "@framework-like-angular/react-adapter": [
        "packages/react-adapter/src"
      ],
      "@framework-like-angular/redux": [
        "packages/redux/src"
      ],
      "@framework-like-angular/vue-adapter": [
        "packages/vue-adapter/src"
      ]
    }
  },
  "include": ["packages", "examples"]
}
